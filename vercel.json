{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run vercel-build",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/jobs/send-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/jobs/extend-recurrences",
      "schedule": "0 2 * * 1"
    }
  ]
}
